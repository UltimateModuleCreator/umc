{% extends "base.html.twig" %}
{% block body %}
    <div class="card">
        <div class="card-header">
            <h3>Installed modules:</h3>
        </div>
        <div class="card-body">
            <table class="table table-bordered">
                <thead>
                <tr>
                    <th scope="col">Module</th>
                    <th scope="col">Date</th>
                    <th scope="col">Edit</th>
                </tr>
                </thead>
                <tbody>
                {% if modules|length > 0 %}
                    {% for module in modules %}
                        <tr>
                            <td>{{ module.name }}</td>
                            <td>{{ module.date.format('Y-m-d H:i') }}</td>
                            <td><a href="{{ url('edit', {"module":module.module_name}) }}">Edit</a></td>
                        </tr>
                    {% endfor %}
                {% else %}
                    <tr>
                        <td colspan="3">There are no modules.</td>
                    </tr>
                {% endif %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
