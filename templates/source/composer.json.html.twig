{
  "name": "{{module.getNamespace()|lower}}/module-{{ module.getModuleName()|hyphen }}",
  "description": "{{ module.getNamespace() }}_{{ module.getModuleName() }} magento 2 extension",
  "require": {
    "php": "{{module.getComposerPhpVersion()}}",
    "magento/module-backend": "*",
    "magento/module-config": "*",
    "magento/module-ui": "*",
{% if module.hasAttributeType('product_attribute') or module.hasAttributeType('product_attribute_set')%}
    "magento/module-eav": "*",
    "magento/module-catalog": "*",
{% endif %}
{% if module.hasAttributeType('image') or module.hasAttributeType('file') %}
    "magento/module-media-storage": "*",
    "magento/module-store": "*",
{% endif %}
{% if module.hasAttributeType('wysiwyg') and module.hasFrontend() %}
    "magento/module-widget": "*",
{% endif %}
{% if module.hasFrontend() %}
    "magento/module-theme": "*",
{% endif %}
    "magento/framework": "*.*"
  },
  "type": "magento2-module",
{% if module.getVersion() == constant('App\\Model\\Module::MAGENTO_VERSION_2_2') %}
  "version": "{{ module.getVersion() }}",
{% endif %}
  "license": [
    "OSL-3.0",
    "AFL-3.0"
  ],
  "autoload": {
    "files": [
      "registration.php"
    ],
    "psr-4": {
      "{{ module.getNamespace() }}\\{{ module.getModuleName() }}\\": ""
    }
  }
}
