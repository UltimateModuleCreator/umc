class Text implements FormatterInterface
{
    /**
     * @var Escaper
     */
    private $escaper;

    /**
     * Text constructor.
     * @param Escaper $escaper
     */
    public function __construct(Escaper $escaper)
    {
        $this->escaper = $escaper;
    }

    /**
     * @param $value
     * @param array $arguments
     * @return string
     */
