<?xml version="1.0"?>{{ module.getFormattedLicense('xml')|raw }}
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Backend:etc/menu.xsd">
    <menu>
        <add id="{{ module.getNamespace() }}_{{ module.getModuleName() }}::{{ module.getModuleName()|lower }}"
             title="{{ module.getMenuText() }}"
             module="{{ module.getNamespace() }}_{{ module.getModuleName() }}"
             sortOrder="{{ module.getSortOrder() }}"
             resource="{{ module.getNamespace() }}_{{ module.getModuleName() }}::{{ module.getModuleName()|lower }}"
             {% if module.getMenuParent() %}parent="{{ module.getMenuParent() }}"{% endif %} />
{% for entity in module.getEntities() %}
        <add id="{{ module.getNamespace() }}_{{ module.getModuleName() }}::{{ module.getModuleName()|lower }}_{{ entity.getNameSingular()|snake }}"
             title="{{ entity.getLabelPlural() }}"
             module="{{ module.getNamespace() }}_{{ module.getModuleName() }}"
             sortOrder="10"
             action="{{ module.getNamespace()|snake }}_{{ module.getModuleName()|lower }}/{{ entity.getNameSingular()|lower }}"
             resource="{{ module.getNamespace() }}_{{ module.getModuleName() }}::{{ module.getModuleName()|lower }}_{{ entity.getNameSingular()|snake }}"
             parent="{{ module.getNamespace() }}_{{ module.getModuleName() }}::{{ module.getModuleName()|lower }}"
        />
{% endfor %}
    </menu>
</config>
