<?xml version="1.0"?>{{ module.getFormattedLicense('xml')|raw }}
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">{{ module.getData('namespace')|snake }}_{{ module.getData('module_name')|camel|lower }}_{{ entity.getData('name_singular')|camel|lower }}_listing.{{ module.getData('namespace')|snake }}_{{ module.getData('module_name')|camel|lower }}_{{ entity.getData('name_singular')|camel|lower }}_listing_data_source</item>
        </item>
    </argument>
    <settings>
        <buttons>
            <button name="add">
                <url path="*/*/new"/>
                <class>primary</class>
                <label translate="true">Add New {{ entity.getData('label_singular')|ucfirst }}</label>
            </button>
        </buttons>
        <spinner>{{ module.getData('namespace')|snake }}_{{ module.getData('module_name')|camel|lower }}_{{ entity.getData('name_singular')|camel|lower }}_columns</spinner>
        <deps>
            <dep>{{ module.getData('namespace')|snake }}_{{ module.getData('module_name')|camel|lower }}_{{ entity.getData('name_singular')|camel|lower }}_listing.{{ module.getData('namespace')|snake }}_{{ module.getData('module_name')|camel|lower }}_{{ entity.getData('name_singular')|camel|lower }}_listing_data_source</dep>
        </deps>
    </settings>
    <dataSource name="{{ module.getData('namespace')|snake }}_{{ module.getData('module_name')|camel|lower }}_{{ entity.getData('name_singular')|camel|lower }}_listing_data_source" component="Magento_Ui/js/grid/provider">
        <settings>
            <storageConfig>
                <param name="indexField" xsi:type="string">{{ entity.getData('name_singular')|snake }}_id</param>
            </storageConfig>
            <updateUrl path="mui/index/render"/>
        </settings>
        <dataProvider class="Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider" name="{{ module.getData('namespace')|snake }}_{{ module.getData('module_name')|camel|lower }}_{{ entity.getData('name_singular')|camel|lower }}_listing_data_source">
            <settings>
                <requestFieldName>{{ entity.getData('name_singular')|snake }}_id</requestFieldName>
                <primaryFieldName>{{ entity.getData('name_singular')|snake }}_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <listingToolbar name="listing_top">
        <settings>
            <sticky>true</sticky>
        </settings>
        <bookmark name="bookmarks"/>
        <columnsControls name="columns_controls"/>
        <filterSearch name="fulltext"/>
        <filters name="listing_filters">
            <argument name="data" xsi:type="array">
                <item name="observers" xsi:type="array">
                    <item name="column" xsi:type="string">column</item>
                </item>
            </argument>
            <settings>
                <templates>
                    <filters>
                        <select>
                            <param name="template" xsi:type="string">ui/grid/filters/elements/ui-select</param>
                            <param name="component" xsi:type="string">Magento_Ui/js/form/element/ui-select</param>
                        </select>
                    </filters>
                </templates>
            </settings>
        </filters>
        <massaction name="listing_massaction">
            <action name="delete">
                <settings>
                    <confirm>
                        <message translate="true">Are you sure you wan't to delete selected {{ entity.getData('label_plural')|ucfirst }}?</message>
                        <title translate="true">Delete {{ entity.getData('label_singular')|ucfirst }}</title>
                    </confirm>
                    <url path="{{ module.getData('namespace')|snake }}_{{ module.getData('module_name')|camel|lower }}/{{ entity.getData('name_singular')|camel|lower }}/massDelete"/>
                    <type>delete</type>
                    <label translate="true">Delete</label>
                </settings>
            </action>
            <action name="edit">
                <settings>
                    <callback>
                        <target>editSelected</target>
                        <provider>{{ module.getData('namespace')|snake }}_{{ module.getData('module_name')|camel|lower }}_{{ entity.getData('name_singular')|camel|lower }}_listing.{{ module.getData('namespace')|snake }}_{{ module.getData('module_name')|camel|lower }}_{{ entity.getData('name_singular')|camel|lower }}_listing.{{ module.getData('namespace')|snake }}_{{ module.getData('module_name')|camel|lower }}_{{ entity.getData('name_singular')|camel|lower }}_columns_editor</provider>
                    </callback>
                    <type>edit</type>
                    <label translate="true">Edit</label>
                </settings>
            </action>
        </massaction>
        <paging name="listing_paging"/>
    </listingToolbar>
    <columns name="{{ module.getData('namespace')|snake }}_{{ module.getData('module_name')|camel|lower }}_{{ entity.getData('name_singular')|camel|lower }}_columns">
        <settings>
            <editorConfig>
                <param name="clientConfig" xsi:type="array">
                    <item name="saveUrl" xsi:type="url" path="{{ module.getData('namespace')|snake }}_{{ module.getData('module_name')|camel|lower }}/{{ entity.getData('name_singular')|camel|lower }}/inlineEdit"/>
                    <item name="validateBeforeSave" xsi:type="boolean">false</item>
                </param>
                <param name="indexField" xsi:type="string">{{ entity.getData('name_singular')|snake }}_id</param>
                <param name="enabled" xsi:type="boolean">true</param>
                <param name="selectProvider" xsi:type="string">{{ module.getData('namespace')|snake }}_{{ module.getData('module_name')|camel|lower }}_{{ entity.getData('name_singular')|camel|lower }}_listing.{{ module.getData('namespace')|snake }}_{{ module.getData('module_name')|camel|lower }}_{{ entity.getData('name_singular')|camel|lower }}_listing.{{ module.getData('namespace')|snake }}_{{ module.getData('module_name')|camel|lower }}_{{ entity.getData('name_singular')|camel|lower }}_columns.ids</param>
            </editorConfig>
            <childDefaults>
                <param name="fieldAction" xsi:type="array">
                    <item name="provider" xsi:type="string">{{ module.getData('namespace')|snake }}_{{ module.getData('module_name')|camel|lower }}_{{ entity.getData('name_singular')|camel|lower }}_listing.{{ module.getData('namespace')|snake }}_{{ module.getData('module_name')|camel|lower }}_{{ entity.getData('name_singular')|camel|lower }}_listing.{{ module.getData('namespace')|snake }}_{{ module.getData('module_name')|camel|lower }}_{{ entity.getData('name_singular')|camel|lower }}_columns_editor</item>
                    <item name="target" xsi:type="string">startEdit</item>
                    <item name="params" xsi:type="array">
                        <item name="0" xsi:type="string">${ $.$data.rowIndex }</item>
                        <item name="1" xsi:type="boolean">true</item>
                    </item>
                </param>
            </childDefaults>
        </settings>
        <selectionsColumn name="ids">
            <settings>
                <indexField>{{ entity.getData('name_singular')|snake }}_id</indexField>
                <resizeEnabled>false</resizeEnabled>
                <resizeDefaultWidth>55</resizeDefaultWidth>
            </settings>
        </selectionsColumn>
        <column name="{{ entity.getData('name_singular')|snake }}_id">
            <settings>
                <filter>textRange</filter>
                <label translate="true">ID</label>
                <sorting>asc</sorting>
            </settings>
        </column>
{% for attribute in entity.getAttributes() %}
{% if attribute.getData('admin_grid') %}
{{ attribute.getTypeInstance().renderGrid()|raw }}
{% endif %}
{% endfor %}
{% if entity.getData('add_created_to_grid') %}
        <column name="created_at" class="Magento\Ui\Component\Listing\Columns\Date" component="Magento_Ui/js/grid/columns/date">
            <settings>
                <filter>dateRange</filter>
                <dataType>date</dataType>
                <label translate="true">Created </label>
{% if entity.getData('add_created_to_grid') is same as("2") %}
                    <visible>false</visible>
{% endif %}
            </settings>
        </column>
{% endif %}
{% if entity.getData('add_updated_to_grid') %}
        <column name="updated_at" class="Magento\Ui\Component\Listing\Columns\Date" component="Magento_Ui/js/grid/columns/date">
            <settings>
                <filter>dateRange</filter>
                <dataType>date</dataType>
                <label translate="true">Modified</label>
{% if entity.getData('add_updated_to_grid') is same as("2") %}
                <visible>false</visible>
{% endif %}
            </settings>
        </column>
{% endif %}
        <actionsColumn name="actions" class="{{ module.getData('namespace') }}\{{ module.getData('module_name') }}\Ui\Component\Listing\Column\{{ entity.getData('name_singular')|ucfirst }}Actions">
            <settings>
                <indexField>{{ entity.getData('name_singular')|snake }}_id</indexField>
                <resizeEnabled>false</resizeEnabled>
            </settings>
        </actionsColumn>
    </columns>
</listing>
