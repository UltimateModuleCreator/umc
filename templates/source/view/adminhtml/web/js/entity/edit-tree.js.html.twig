require([
    'jquery',
    'Magento_Ui/js/modal/confirm',
    'Magento_Ui/js/modal/alert',
    'loadingPopup',
    'mage/backend/floating-header'
], function (jQuery, confirm) {
    'use strict';

    /**
     * Delete {{ entity.getLabelSingular() }}
     */
    function {{ entity.getNameSingular()|camel }}Delete(url) {
        confirm({
            content: 'Are you sure you want to delete this {{ entity.getLabelSingular }}?',
            actions: {
                confirm: function () {
                    location.href = url;
                }
            }
        });
    }

    function displayLoadingMask() {
        jQuery('body').loadingPopup();
    }

    window.{{ entity.getNameSingular()|camel }}Delete = {{ entity.getNameSingular()|camel }}Delete;
    window.displayLoadingMask = displayLoadingMask;
});
