{% if module.hasFooterMenu() %}
<?xml version="1.0"?>{{ module.getFormattedLicense('xml')|raw }}
    <page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
        <body>
            <referenceBlock name="footer_links">
{% for entity in module.getMenuEntities(constant('App\\Model\\Entity::MENU_LINK_FOOTER')) %}
                <block class="{{ module.getNamespace() }}\{{ module.getModuleName }}\Block\{{ entity.getNameSingular()|camel|ucfirst }}\Link" name="{{ module.getNamespace()|hyphen }}-{{ module.getModuleName()|hyphen }}-{{ entity.getNameSingular()|hyphen }}-link">
                    <arguments>
                        <argument name="label" xsi:type="string" translate="true">{{ entity.getLabelPlural() }}</argument>
                        <argument name="attributes" xsi:type="array">
                            <item name="data-action" xsi:type="string">{{ entity.getNameSingular()|hyphen }}</item>
                        </argument>
                    </arguments>
                </block>
{% endfor %}
            </referenceBlock>
        </body>
    </page>
{% endif %}
