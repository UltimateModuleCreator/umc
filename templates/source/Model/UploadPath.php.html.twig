<?php{{ module.getFormattedLicense('php') }}
namespace {{ module.getNamespace() }}\{{ module.getModuleName() }}\Model;

class UploadPath
{
{% for entity in module.getEntities() %}
{% if entity.hasAttributeType('image') %}
    /**
     * {{ entity.getLabelSingular()|capitalize }} tmp image path
     *
     * @var string
     */
    const {{ entity.getNameSingular()|snake|upper }}_IMAGE_TMP_PATH = '{{ module.getNamespace()|snake }}_{{ module.getModuleName()|snake }}/tmp/{{ entity.getNameSingular()|snake }}/image';

    /**
     * {{ entity.getLabelSingular()|capitalize }} image path
     *
     * @var string
     */
    const {{ entity.getNameSingular()|snake|upper }}_IMAGE_PATH = '{{ module.getNamespace()|snake }}_{{ module.getModuleName()|snake }}/{{ entity.getNameSingular()|snake }}/image';
{% endif %}
{% if entity.hasAttributeType('file') %}
    /**
     * {{ entity.getLabelSingular()|capitalize }} tmp file path
     *
     * @var string
     */
    const {{ entity.getNameSingular()|snake|upper }}_FILE_TMP_PATH = '{{ module.getNamespace()|snake }}_{{ module.getModuleName()|snake }}/tmp/{{ entity.getNameSingular()|snake }}/file';

    /**
     * {{ entity.getLabelSingular()|capitalize }} file path
     *
     * @var string
     */
    const {{ entity.getNameSingular()|snake|upper }}_FILE_PATH = '{{ module.getNamespace()|snake }}_{{ module.getModuleName()|snake }}/{{ entity.getNameSingular()|snake }}/file';
{% endif %}
{% endfor %}
}
{% endif %}
