        <field name="{{ attribute.getData('code') }}" formElement="fileUploader">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">{{  attribute.getEntity().getData('name_singular')|snake }}</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">{{ attribute.getData('label') }}</label>
                <dataScope>{{ attribute.getData('code') }}</dataScope>
                <elementTmpl>ui/form/element/uploader/uploader</elementTmpl>
            </settings>
            <formElements>
                <fileUploader>
                    <settings>
                        <uploaderConfig>
                            <param xsi:type="url" name="url" path="{{ module.getData('namespace')|camel }}_{{ module.getData('module_name')|snake }}/{{ entity.getData('name_singular')|camel }}_{{ type.getData('upload_type') }}/upload/field/{{ attribute.getData('code') }}"/>
                        </uploaderConfig>
                        <previewTmpl>{{ module.getData('namespace') }}_{{ module.getData('module_name') }}/{{ type.getData('upload_type') }}-preview</previewTmpl>
                    </settings>
                </fileUploader>
            </formElements>
        </field>
