<div class="form-group"{% if element.containerAttributes is defined %} {{ element.containerAttributes|raw }}{% endif %}>
    <label
            data-bind="attr: {for: uuid('{{ element.name }}')}"
            {% if element.title %} title="{{ element.title }}" {% endif %}
    >
        {{ element.label }}
    </label>
    <textarea
            name="{{ element.name }}"
            {% if element.required is defined and element.required %} required="required" {% endif %}
            data-bind="value: data.{{ element.name }}, attr: {id:uuid('{{ element.name }}') }{% if element.additionalDataBind is defined %}, {{ element.additionalDataBind }}{% endif %}"
            class="form-control"
            {% if element.title %} title="{{ element.title }}" {% endif %}
    ></textarea>
</div>
