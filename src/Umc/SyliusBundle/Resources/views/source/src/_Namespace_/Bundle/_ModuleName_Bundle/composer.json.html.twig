{
    "name": "{{ module.getNamespace()|hyphen }}/{{ module.getModuleName()|hyphen }}-bundle",
    "type": "symfony-bundle",
    "description": "{{ module.getModuleName() }} CRUD module",
    "keywords": ["crud"],
    "license": "MIT",
    "authors": [
        {
            "name": "Ultimate module creator",
            "homepage": "https://github.com/ultimatemodulecreator/umc"
        }
    ],
    "require": {
        "php": "^7.2",
        "stof/doctrine-extensions-bundle": "^1.2",
        "symfony/framework-bundle": "^3.4|^4.3",
        "symfony/intl": "^3.4|^4.3",
        "sylius/resource-bundle": "^1.6",
        "sensio/framework-extra-bundle": "^5.0"
    },
    "require-dev": {
        "doctrine/orm": "^2.5",
        "phpspec/phpspec": "^5.0",
        "symfony/dependency-injection": "^3.4|^4.3",
        "symfony/form": "^3.4|^4.3",
        "symfony/validator": "^3.4|^4.3",
        "phpunit/phpunit": "^7.0",
    },
    "conflict": {
        "twig/twig": "^1.0"
    },
    "config": {
        "bin-dir": "bin"
    },
    "autoload": {
        "psr-4": { "{{ module.getNamespace() }}\\Bundle\\{{ module.getModuleName() }}Bundle\\": "" }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "repositories": [
        {
            "type": "path",
            "url": "../../*/*"
        }
    ]
}
