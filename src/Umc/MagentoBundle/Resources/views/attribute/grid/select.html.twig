        <column name="{{ attribute.getCode() }}" component="Magento_Ui/js/grid/columns/select">
            <settings>
                <filter>{{ type.getGridFilterType() }}</filter>
{% if not type.hasFlag('multiple') %}
                <editor>
{% if (attribute.isRequired()) %}
                    <validation>
                        <rule name="required-entry" xsi:type="boolean">true</rule>
                    </validation>
{% endif %}
                    <editorType>select</editorType>
                </editor>
{% endif %}
                <dataType>select</dataType>
                <options class="{{ type.getSourceModel() }}"/>
                <label translate="true">{{ attribute.getLabel() }}</label>
{% if attribute.isAdminGridHidden() %}
                    <visible>false</visible>
{% endif %}
            </settings>
        </column>
