    public function testModifyData()
    {
        $modifier = new Multiselect(['field1', 'field2', 'field3']);
        $data = [
            'field1' => [1, 2, 3],
            'field2' => '4,5,6',
            'dummy' => 'dummy'
        ];
        $expected = [
            'field1' => '1,2,3',
            'field2' => '4,5,6',
            'dummy' => 'dummy'
        ];
        $this->assertEquals($expected, $modifier->modifyData($data));
    }
